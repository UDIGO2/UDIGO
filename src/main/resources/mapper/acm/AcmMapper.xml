<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.udigo.hotel.acm.model.dao.AcmMapper">

    <select id="selectInitialAcms" resultType="com.udigo.hotel.acm.model.dto.AcmDTO">
        SELECT *
        FROM
            tbl_acm
        ORDER BY
            liked_count DESC
        LIMIT 9
    </select>

    <select id="searchAcms" resultType="com.udigo.hotel.acm.model.dto.AcmDTO">
        SELECT *
        FROM
        tbl_acm a
        WHERE 1 = 1
        <if test="acmLocation != null and acmLocation != ''">
            AND a.acm_location = #{acmLocation} #지역
        </if>
        <if test="maxGuest != null and maxGuest != ''">
            AND a.max_guest = #{maxGuest} #최대인원
        </if>
        <if test="acmDate != null and acmDate != ''">
            AND a.acm_id NOT IN ( #예약날짜
            SELECT r.acm_id
            FROM tbl_reservations r
            WHERE #{acmDate} BETWEEN r.check_in AND r.check_out
            )
        </if>
        ORDER BY
        a.liked_count DESC
        LIMIT 9
    </select>

    <select id="selectNextAcms" resultType="com.udigo.hotel.acm.model.dto.AcmDTO">
        SELECT *
        FROM
            tbl_acm
        ORDER BY
            acm_location
        LIMIT #{currentCount}, 9
    </select>

    <select id="getTotalAcmCount" resultType="int">
        SELECT COUNT(*)
        FROM
            tbl_acm
    </select>

</mapper>
